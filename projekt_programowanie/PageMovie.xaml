<Page x:Class="projekt_programowanie.PageMovie"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PageMovie">

    <Grid x:Name="GridMain" Height="460" Width="1080" Background="Red">
        <Grid Margin="150,0,150,0" Background="WhiteSmoke">
            <DataGrid Name="Data" AutoGenerateColumns="True" Background="#FFFC9595" Margin="0,0,0,140"  Foreground="{x:Null}" BorderBrush="{x:Null}"/>
            <Grid Margin="0,320,0,0" Background="White">
                <Button x:Name="ButtonStartHome" Width="150" Height="125" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ButtonStartHome_Click" >
                    <materialDesign:PackIcon  Kind="PlayCircleFilled" Width="125" Height="125" Foreground="Aquamarine" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
